{
  "name": "browser-ava",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./": "./src/ava.mjs"
  },
  "description": "run ava test in the browser",
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.8.0",
    "semantic-release": "^17.4.4"
  },
  "engines": {
    "node": ">=14.17.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/browser-ava.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/browser-ava/issues"
  },
  "homepage": "https://github.com/arlac77/browser-ava#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-node-app"
    ]
  }
}